{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "exclude": ["src/test_data"]
}