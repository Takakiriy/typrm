{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and basic test",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "TypeScript Compile Task",
            "program": "${workspaceFolder}/src/typrm_test.ts",
            "runtimeArgs": ["--experimental-specifier-resolution=node"],
            "args": [],
            "cwd": "${workspaceFolder}/src",
            "smartStep": true,
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ]
        },
        {
            "name": "Debug from launch",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "TypeScript Compile Task",
            "program": "${workspaceFolder}/src/typrm.ts",
            "runtimeArgs": ["--experimental-specifier-resolution=node"],
            "args": ["key"],  // "check", "--verbose"
            "cwd": "${workspaceFolder}/src",
            "smartStep": true,
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ]
        },
        {
            "name": "Attach a process",
            "type": "node",
            "request": "attach",
            "processId": "${command:PickProcess}"
        },
        {
            "name": "Debug Posix Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/.bin/jest",
                "main",
                "--runInBand",
                "--coverage", "false"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Debug Windows Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "main",
                "--runInBand",
                "--coverage", "false"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
